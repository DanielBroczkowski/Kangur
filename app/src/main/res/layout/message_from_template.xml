<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_from_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/black"
        app:layout_goneMarginStart="8dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal" />

    <TextView
        android:id="@+id/message_from_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner"
        android:padding="16dp"
        android:maxWidth="200dp"
        android:text="Test text testowyu test ktryu mam tutaj napisac bo nie wiem co to jest"
        app:layout_constraintEnd_toStartOf="@+id/user_from_avatar"
        app:layout_constraintTop_toTopOf="@+id/user_from_avatar" />
</androidx.constraintlayout.widget.ConstraintLayout>