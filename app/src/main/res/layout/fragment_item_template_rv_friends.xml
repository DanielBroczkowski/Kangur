<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_movies_f_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewTemplateFriend"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_person_black_24dp"/>

        <TextView
            android:id="@+id/textViewForeNameFriendTemplate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="55dp"
            android:layout_toEndOf="@+id/imageViewTemplateFriend"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/textViewLastNameFriendTemplate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="55dp"
            android:layout_toEndOf="@+id/imageViewTemplateFriend"
            android:layout_below="@+id/textViewForeNameFriendTemplate"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonSendMessageTemplate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/textViewLastNameFriendTemplate"
            android:src="@drawable/ic_insert_comment_black_24dp"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonSendCallTemplate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/imageButtonSendMessageTemplate"
            android:src="@drawable/ic_phone_black_24dp"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>